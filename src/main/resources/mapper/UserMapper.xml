<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.UserDao">

    <select id="getUserid" resultType="int">
        select id from `user` where username=#{username}
    </select>

    <select id="getUserById" resultType="User">
        select * from `user` where id=#{id}
    </select>

    <select id="getUserByName" resultType="User">
        select * from user where username=#{username}
    </select>

    <insert id="processRegister" parameterType="User" >
        insert into user (username,password,name,sex,age)
        values (#{username},#{password},#{name},#{sex},#{age})
    </insert>

    <delete id="deleteUser" parameterType="User">
        delete from user   where username =#{name}
    </delete>


    <select id="getUserList" resultType="User">
        select * from user where id in (
            select userid from diagsheet where department = #{department}
            )
    </select>


    <select id="getUserList2" resultType="User">
        select * from user where id in (
            select userid from diagsheet where department = #{department} and ischeck = 0
        )
    </select>

    <select id="getUserList3" resultType="User">
        select * from user where id in (
            select userid from diagsheet where department = #{department} and ischeck = 1
        )
    </select>

</mapper>



