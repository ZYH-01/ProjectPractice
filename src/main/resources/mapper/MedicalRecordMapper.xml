<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.MedicalRecordDao">

    <select id="getMedicalRecordByDepartment" resultType="MedicalRecord">
        select * from medicalrecord where department = #{department}
    </select>

    <select id="getMedicalRecordByDepartment2" resultType="MedicalRecord">
        select * from medicalrecord where department =  #{department} and userid = #{userid}
    </select>

    <select id="getMedicalRecordById" resultType="MedicalRecord">
        select * from medicalrecord where id = #{id}
    </select>

    <insert id="insertMedicalRecord" parameterType="MedicalRecord" >
        insert into medicalrecord (name, content, priority, date, userid,department)
        values (#{name},#{content},#{priority},#{date},#{userid},#{department})
    </insert>

<!--    根据患者id返回配药记录-->
    <select id="getMedicalRecordByUserid" resultType="MedicalRecord">
        select * from medicalrecord where userid = #{userid}
    </select>

</mapper>