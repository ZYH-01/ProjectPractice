.status {
  width: 100%;
  height: 0;
  position: fixed;
  z-index: 10;
  background-color: #fff;
  top: 0;
}
.header {
  width: 92%;
  padding: 0 4%;
  height: 100rpx;
  display: flex;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 10;
  background-color: #fff;
}
.header .addr {
  width: 120rpx;
  height: 60rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.header .addr .icon {
  height: 60rpx;
  margin-right: 5rpx;
  display: flex;
  align-items: center;
  font-size: 42rpx;
  color: #ffc50a;
}
.header .input-box {
  width: 100%;
  height: 60rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.header .input-box .icon {
  display: flex;
  align-items: center;
  position: absolute;
  top: 0;
  right: 0;
  width: 60rpx;
  height: 60rpx;
  font-size: 34rpx;
  color: #c0c0c0;
}
.header .input-box input {
  padding-left: 28rpx;
  height: 28rpx;
  font-size: 28rpx;
}
.header .icon-btn {
  width: 60rpx;
  height: 60rpx;
  flex-shrink: 0;
  display: flex;
}
.header .icon-btn .icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 42rpx;
}
.place {
  background-color: #ffffff;
  height: 100rpx;
}
.category-list {
  width: 100%;
  background-color: #fff;
  display: flex;
}
.category-list .left, .category-list .right {
  position: absolute;
  top: 100rpx;
  bottom: 0rpx;
}
.category-list .left {
  width: 24%;
  left: 0rpx;
  background-color: #f2f2f2;
}
.category-list .left .row {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
}
.category-list .left .row .text {
  width: 100%;
  position: relative;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  color: #3c3c3c;
}
.category-list .left .row .text .block {
  position: absolute;
  width: 0rpx;
  left: 0;
}
.category-list .left .row.on {
  height: 100rpx;
  background-color: #fff;
}
.category-list .left .row.on .text {
  font-size: 30rpx;
  font-weight: 600;
  color: #2d2d2d;
}
.category-list .left .row.on .text .block {
  width: 10rpx;
  height: 80%;
  top: 10%;
  background-color: #f06c7a;
}
.category-list .right {
  width: 76%;
  left: 24%;
}
.category-list .right .category {
  width: 94%;
  padding: 20rpx 3%;
}
.category-list .right .category .banner {
  width: 100%;
  height: 24.262vw;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0rpx 5rpx 20rpx rgba(0, 0, 0, 0.3);
}
.category-list .right .category .banner image {
  width: 100%;
  height: 24.262vw;
}
.category-list .right .category .list {
  margin-top: 40rpx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.category-list .right .category .list .checkbox-box {
  display: flex;
  align-items: center;
}
.category-list .right .category .list .checkbox-box .checkbox {
  width: 25rpx;
  height: 25rpx;
  border-radius: 100%;
  border: solid 2rpx #f06c7a;
  display: flex;
  justify-content: center;
  align-items: center;
}
.category-list .right .category .list .checkbox-box .checkbox .on {
  width: 25rpx;
  height: 25rpx;
  border-radius: 100%;
  background-color: #f06c7a;
}
.category-list .right .category .list .row {
  width: calc(92%);
  height: calc(22vw + 40rpx);
  margin: 20rpx auto;
  border-radius: 15rpx;
  box-shadow: 0rpx 5rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
  z-index: 4;
  border: 0;
}
.category-list .right .category .list .row .menu {
  position: absolute;
  width: 30%;
  height: 100%;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: red;
  color: #fff;
  z-index: 2;
}
.category-list .right .category .list .row .menu .icon {
  color: #fff;
}
.category-list .right .category .list .row .carrier {
  background-color: #fff;
  position: absolute;
  width: 100%;
  padding: 0 0;
  height: 100%;
  z-index: 3;
  display: flex;
  align-items: center;
}
@-webkit-keyframes showMenu {
0% {
    -webkit-transform: translateX(0);
            transform: translateX(0);
}
100% {
    -webkit-transform: translateX(-30%);
            transform: translateX(-30%);
}
}
@keyframes showMenu {
0% {
    -webkit-transform: translateX(0);
            transform: translateX(0);
}
100% {
    -webkit-transform: translateX(-30%);
            transform: translateX(-30%);
}
}
@-webkit-keyframes closeMenu {
0% {
    -webkit-transform: translateX(-30%);
            transform: translateX(-30%);
}
100% {
    -webkit-transform: translateX(0);
            transform: translateX(0);
}
}
@keyframes closeMenu {
0% {
    -webkit-transform: translateX(-30%);
            transform: translateX(-30%);
}
100% {
    -webkit-transform: translateX(0);
            transform: translateX(0);
}
}
.category-list .right .category .list .row .carrier.open {
  -webkit-animation: showMenu 0.25s linear both;
          animation: showMenu 0.25s linear both;
}
.category-list .right .category .list .row .carrier.close {
  -webkit-animation: closeMenu 0.15s linear both;
          animation: closeMenu 0.15s linear both;
}
.category-list .right .category .list .row .carrier .checkbox-box {
  padding-left: 10rpx;
  flex-shrink: 0;
  height: 22vw;
  margin-right: 10rpx;
}
.category-list .right .category .list .row .carrier .goods-info {
  width: 100%;
  display: flex;
  padding-right: 20rpx;
}
.category-list .right .category .list .row .carrier .goods-info .img {
  width: 22vw;
  height: 22vw;
  border-radius: 10rpx;
  overflow: hidden;
  flex-shrink: 0;
  margin-right: 10rpx;
}
.category-list .right .category .list .row .carrier .goods-info .img image {
  width: 22vw;
  height: 22vw;
}
.category-list .right .category .list .row .carrier .goods-info .info {
  width: 100%;
  height: 22vw;
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
  position: relative;
}
.category-list .right .category .list .row .carrier .goods-info .info .title {
  width: 100%;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.category-list .right .category .list .row .carrier .goods-info .info .spec {
  font-size: 20rpx;
  background-color: #f3f3f3;
  color: #a7a7a7;
  height: 30rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
  border-radius: 15rpx;
  margin-bottom: 20vw;
}
.category-list .right .category .list .row .carrier .goods-info .info .price-number {
  position: absolute;
  width: 100%;
  bottom: 0rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  font-size: 28rpx;
  height: 60rpx;
}
.category-list .right .category .list .row .carrier .goods-info .info .price-number .number {
  display: flex;
  justify-content: center;
  align-items: flex-end;
}
.category-list .right .category .list .row .carrier .goods-info .info .price-number .number .input {
  width: 60rpx;
  height: 60rpx;
  margin: 0 10rpx;
  background-color: #f3f3f3;
}
.category-list .right .category .list .row .carrier .goods-info .info .price-number .number .input input {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 26rpx;
}
.category-list .right .category .list .row .carrier .goods-info .info .price-number .number .sub, .category-list .right .category .list .row .carrier .goods-info .info .price-number .number .add {
  width: 45rpx;
  height: 45rpx;
  background-color: #f3f3f3;
  border-radius: 5rpx;
}
.category-list .right .category .list .row .carrier .goods-info .info .price-number .number .sub .icon, .category-list .right .category .list .row .carrier .goods-info .info .price-number .number .add .icon {
  font-size: 22rpx;
  width: 45rpx;
  height: 45rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

